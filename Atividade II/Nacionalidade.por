//Escreva um algoritmo onde o usuário digita um número e baseado no número selecionado responda a Nacionalidade do Cidadão

programa
{
	funcao inicio()
	{
		inteiro nacionalidade
		escreva("Informe a nacionalidade do(a) cidadã(o): \n")
		escreva("1 - Brasileiro\n")
		escreva("2 - Alemão\n")
		escreva("3 - Inglês\n")
		escreva("4 - Italiano\n")
		escreva("5 - Espanhol\n")
		escreva("6 - Frânces\n")
		leia(nacionalidade)

		escolha(nacionalidade){
			caso 1:
			escreva("O idioma é o Português\n")
			pare
			caso 2:
			escreva("O idioma é o Alemão\n")
			pare
			caso 3:
			escreva("O idioma é o Inglês\n")
			pare
			caso 4:
			escreva("O idioma é o Italiano\n")
			pare
			caso 5:
			escreva("O idioma é o Espanhol\n")
			pare
			caso 6:
			escreva("O idioma é o Frânces\n")
			pare
			caso contrario:
			escreva("Não é possível verificar o idioma\n")
			}
	}
}
